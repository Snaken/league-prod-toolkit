{
  "name": "league-prod-toolkit-core",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "build": "tsc",
    "postbuild": "copyfiles core/web/views/**.* core/web/public/**.* dist",
    "start": "npm run build && node dist/core/app.js",
    "start:watch": "nodemon",
    "ui": "browser-sync start --proxy=localhost:3003 --files='dist/core/**/*.css, dist/core/**/*.pug, dist/core/**/*.js' --ignore=node_modules --reload-delay 10 --no-ui --no-notify --no-open",
    "dev": "concurrently \"npm:start:watch\" \"npm:ui\"",
    "tsc": "tsc",
    "lint": "eslint core/**"
  },
  "dependencies": {
    "bootstrap": "^4.5.0",
    "cli-progress": "^3.3.1",
    "debug": "~2.6.9",
    "express": "^4.17.1",
    "lcu-connector": "^2.1.2",
    "morgan": "~1.9.1",
    "needle": "^2.4.0",
    "pug": "^2.0.4",
    "typescript": "^3.6.3",
    "winston": "^3.2.1",
    "ws": "^7.1.2"
  },
  "devDependencies": {
    "@types/cli-progress": "^1.8.1",
    "@types/express": "^4.17.1",
    "@types/minimist": "^1.2.0",
    "@types/needle": "^2.0.4",
    "@types/node": "^12.7.7",
    "@types/ws": "^6.0.3",
    "@typescript-eslint/eslint-plugin": "^2.3.2",
    "@typescript-eslint/parser": "^2.3.2",
    "babel-cli": "^6.26.0",
    "babel-preset-es2015": "^6.24.1",
    "browser-sync": "^2.26.7",
    "concurrently": "^5.2.0",
    "copyfiles": "^2.2.0",
    "electron": "^7.0.0",
    "eslint": "^6.5.1",
    "eslint-plugin-import": "^2.18.2",
    "nodemon": "^2.0.4"
  },
  "nodemonConfig": {
    "watch": [
      "core",
      "modules"
    ],
    "exec": "npm start",
    "ext": "ts,js,json,pug,css"
  }
}
