{
  "compilerOptions": {
    "incremental": true,
    "target": "ES2018",
    "module": "commonjs",
    "sourceMap": true,
    "outDir": "./dist/core",
    "rootDir": "./core",
    "tsBuildInfoFile": "./dist/.tsbuildinfo",
    "declaration": true,
    "strict": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "baseUrl": "./core",
    "plugins": [
      { "transform": "@zerollup/ts-transform-paths" }
    ],
  }
}